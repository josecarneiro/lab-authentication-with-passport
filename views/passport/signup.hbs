<h1>Sign Up</h1>

{{#if errorMessage}}
  <div class="alert alert-danger">
    ERROR: {{errorMessage}}
  </div>
{{/if}}

<form method="POST" action="/signup">
  <div class="form-group">
    <label for="signup-username">Username: </label>
    <input required id="signup-username" type="username" name="username" placeholder="Your username">
  </div>
  <div class="form-group">
    <label for="signup-password">Password: </label>
    <input required id="signup-password" type="password" name="password" placeholder="Your password">
  </div>
  <button>Sign Up!</button>
</form>
